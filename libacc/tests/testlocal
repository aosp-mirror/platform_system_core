#!/bin/sh
rm -f test-acc
cd ..
g++ -I../include acc.cpp disassem.cpp tests/main.cpp -g -ldl -o tests/test-acc
cd tests
if [ -x "test-acc" ]; then
  ./test-acc -S data/returnval.c

  if [ "$(uname)" = "Linux" ]; then
    if [ "$(uname -m)" = "i686" ]; then
      echo "Linux i686. Testing otcc.c"
      ./test-acc data/otcc.c data/otcc.c data/returnval.c
    fi
  fi
fi
