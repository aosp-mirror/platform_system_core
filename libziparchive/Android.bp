cc_library {
    name: "libziparchive",
    host_supported: true,
    srcs: ["zip_archive.cc"],
    static_libs: ["libz"],
    shared_libs: [
        "liblog",
        "libutils",
        "libbase",
    ],
    cflags: [
        "-Werror",
    ],
    target: {
        android: {
            cflags: ["-Wall"],
            cppflags: ["-Wold-style-cast"],
        },
        windows: {
            cflags: ["-mno-ms-bitfields"],
        },
    },
}

// Tests.
cc_test {
    name: "ziparchive-tests",
    host_supported: true,
    cflags: ["-Werror"],
    srcs: [
        "zip_archive_test.cc",
        "entry_name_utils_test.cc",
    ],
    shared_libs: [
        "liblog",
        "libbase",
    ],
    static_libs: [
        "libziparchive",
        "libz",
        "libutils",
    ],
}
