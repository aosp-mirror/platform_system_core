cc_test {
    name: "libcutils_test",
    host_supported: true,
    srcs: ["test_str_parms.cpp"],

    target: {
        android: {
            srcs: [
                "MemsetTest.cpp",
                "PropertiesTest.cpp",
            ],
        },
    },

    shared_libs: [
        "libcutils",
        "liblog",
    ],

    compile_multilib: "both",
    multilib: {
        lib32: {
            suffix: "32",
        },
        lib64: {
            suffix: "64",
        },
    },
}

cc_test {
    name: "libcutils_test_static",
    host_supported: true,
    srcs: ["test_str_parms.cpp"],
    static_executable: true,

    target: {
        android: {
            srcs: [
                "MemsetTest.cpp",
                "PropertiesTest.cpp",
            ],
        },
    },

    static_libs: [
        "libcutils",
        "liblog",
    ],

    compile_multilib: "both",
    multilib: {
        lib32: {
            suffix: "32",
        },
        lib64: {
            suffix: "64",
        },
    },
}


