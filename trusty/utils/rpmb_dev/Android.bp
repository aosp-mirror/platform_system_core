package {
    default_applicable_licenses: ["Android-Apache-2.0"],
}

cc_defaults {
    name: "rpmb_dev.cc_defaults",
    srcs: [
        "rpmb_dev.c",
    ],
    shared_libs: [
        "libcutils",
        "liblog",
        "libcrypto",
    ],
    cflags: [
        "-Wall",
        "-Werror",
    ],
}

cc_binary {
    name: "rpmb_dev",
    defaults: ["rpmb_dev.cc_defaults"],
    vendor: true,
    host_supported: true,
    init_rc: [
        "rpmb_dev.rc",
    ],
}

cc_binary {
    name: "rpmb_dev.system",
    defaults: ["rpmb_dev.cc_defaults"],
    system_ext_specific: true,
    init_rc: [
        "rpmb_dev.system.rc",
    ],
}

cc_binary {
    name: "rpmb_dev.wv.system",
    defaults: ["rpmb_dev.cc_defaults"],
    system_ext_specific: true,
    init_rc: [
        "rpmb_dev.wv.system.rc",
    ],
}
